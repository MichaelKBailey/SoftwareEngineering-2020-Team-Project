package PanelAttackPackage;

import java.awt.Dimension;
import java.security.cert.Extension;
import javax.swing.*;

public class BlockButtons extends JPanel implements Prototype {

	
	private static final int MAX_WIDTH = 30;
	private static final int MAX_HEIGHT = 30;
	private int xPosition = 0;
	private int yPositionInitial = -30;
	private int yPosition = 0;
	private int MASTER_Y = yPosition + 2; 
	private boolean blockEnabled = false; 
	private String borderColor = "RED";
	private String buttonText = "";
	private int blockColor = 0; 
	
	
	public BlockButtons() 
	{
		
	}
	
	public BlockButtons(int xPosition, int yPositionInitial, int MAX_WIDTH, int MAX_HEIGHT, String buttonText, boolean blockEnabled)
	{
		this();
		this.xPosition = xPosition;
		this.yPositionInitial = yPositionInitial;	
		this.buttonText = buttonText;
		this.blockEnabled = blockEnabled;
	}
	
	
	
	@Override
	public Prototype getClone() 
	{
		// TODO Auto-generated method stub
		return new BlockButtons(xPosition, yPositionInitial, MAX_WIDTH, MAX_HEIGHT, buttonText, blockEnabled);
	}
	
}
